@using EntityLayer.Concrete
@model List<About>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header"></section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Hakkımızda İşlemleri</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th style="width: 1%">
                            #
                        </th>
                        <th style="width: 25%">
                            Hakkımızda Başlığı
                        </th>

                        <th style="width: 25%">
                            Hakkımızda Başlığı2
                        </th>

                        <th style="width: 15%">
                            Düzenle
                        </th>

                        <th style="width: 15%">
                            Sil
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.AboutID
                            </td>
                            <td>
                                <a>
                                    @item.AboutDetails1
                                </a>
                                <br />
                            </td>

                            <td>
                                <a>
                                    @item.AboutDetails2
                                </a>
                                <br />
                            </td>

                            <td>
                                <a href="/About/EditAbout/@item.AboutID"  class="btn btn-sm btn-info">Düzenle</a>
                            </td>

                            <td>
                                <a href="/About/DeleteAbout/@item.AboutID" class="btn btn-sm btn-danger">Sil</a>
                            </td>

                        </tr>
                    }
                </tbody>

            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</section>
@Html.Action("AboutPartial", "About")



