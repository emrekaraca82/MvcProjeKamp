
<!-- Button trigger modal -->
<button type="button" class="btn btn-sm btn-success" data-toggle="modal" data-target="#exampleModal">
    Yeni Kayıt
</button>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Hakkımızda Metin Girişi</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" action="/About/AddAbout" enctype="multipart/form-data">

                    <div class="form-group">
                        <label>Hakkımızda 1</label>
                        <input type="text" name="AboutDetails1" class="form-control" placeholder="Hakkımızda Metin Gir">
                    </div>
                  
                    <div class="form-group">
                        <label>Hakkımızda 2</label>
                        <input type="text" name="AboutDetails2" class="form-control" placeholder="Hakkımızda Metin Gir">
                    </div>

                    <div class="form-group">
                        <label>Image 1</label>
                        <input type="file" name="AboutImage1" class="form-control">
                    </div>

                    <div class="form-group">
                        <label>Image 2</label>
                        <input type="file" name="AboutImage2" class="form-control">
                    </div>

                    <button type="submit" class="btn btn-success">Kaydet</button>
                </form>
            </div>

        </div>
    </div>
</div>
