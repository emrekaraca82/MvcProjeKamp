@model EntityLayer.Concrete.Heading
@{
    ViewBag.Title = "EditHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("EditHeading", "Heading", FormMethod.Post))
{
<div class="form-group">

    @Html.HiddenFor(x => x.HeadingID)

    @Html.Label("Başlık Adı")
    @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.HeadingName)
    <br />

    @Html.Label("Kategori")
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })
    <br />

    @Html.Label("Tarih")
    @Html.TextBoxFor(x => x.HeadingDate, new { @class = "form-control" })
    <br />

    @Html.Label("Yazar") 
    @Html.DropDownListFor(x => x.WriterID, (List<SelectListItem>)ViewBag.vwc, new { @class = "form-control" })
    <br />

    <button class="btn btn-sm btn-success">Güncelle</button>
</div>
}
