@using EntityLayer.Concrete
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <!-- Content Header (Page header) -->
    <section class="content-header"></section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Başlık İşlemleri</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 20%">
                               Kategori Adı
                            </th>                         
                            <th style="width: 10%">
                                Durum
                            </th>
                           
                            <th style="width: 25%" class="text-center">
                                İşlemler
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.CategoryID
                                </td>
                                <td>
                                    <a>
                                        @item.CategoryName
                                    </a>         
                                </td>
                             
                                <td>
                                    @if (item.CategoryStatus == true)
                                    {
                                        <span class="badge badge-success">
                                            Aktif
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">
                                            Pasif
                                        </span>
                                    }
                                </td>

                            
                                <td class="project-actions text-right">
                                    <a class="btn btn-sm btn-warning" style="color:white" href="">
                                        <i class="fas fa-folder">
                                        </i>
                                        Başlıklar
                                    </a>
                                    <a class="btn btn-info btn-sm" href="/AdminCategory/EditCategory/@item.CategoryID">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Düzenle
                                    </a>

                                    @if (item.CategoryStatus == true)
                                    {
                                        <a class="btn btn-danger btn-sm" href="/AdminCategory/DeleteCategory/@item.CategoryID">
                                            <i class="fas fa-trash">
                                            </i>
                                            Pasif Yap
                                        </a>
                                    }
                                    else
                                    {
                                        <a class="btn btn-success btn-sm" href="/AdminCategory/DeleteCategory/@item.CategoryID">
                                            <i class="fas fa-trash">
                                            </i>
                                            Aktif Yap
                                        </a>
                                    }

                                    @*<a class="btn btn-danger btn-sm" href="/AdminCategory/DeleteCategory/@item.CategoryID">
                                        <i class="fas fa-trash">
                                        </i>
                                        Sil
                                    </a>*@

                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
</body>
</html>
<a href="/AdminCategory/AddCategory/" class="btn btn-sm btn-success">Yeni Kategori</a>



